<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dangnhap.Registration">

    <TextView
        android:id="@+id/txt_registration"
        android:layout_width="500px"
        android:layout_height="100px"
        android:text="ĐĂNG KÍ"
        android:layout_marginTop="100px"
        android:textSize="24dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal" />
    <EditText
        android:id="@+id/ext_user_name"
        android:layout_width="1000px"
        android:layout_height="120px"
        android:hint="Họ và tên"
        android:textStyle="italic"
        android:padding="15px"
        android:background="@drawable/bogocedittext"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_registration"
        android:layout_marginTop="70px"/>
    <EditText
        android:id="@+id/edt_dkemail"
        android:layout_width="1000px"
        android:layout_height="120px"
        android:hint="Gmail"
        android:textStyle="italic"
        android:padding="15px"
        android:background="@drawable/bogocedittext"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ext_user_name"
        android:layout_marginTop="40px"/>
    <EditText
        android:id="@+id/ext_dkmatkhau"
        android:layout_width="1000px"
        android:layout_height="120px"
        android:hint="Mật khẩu"
        android:textStyle="italic"
        android:padding="15px"
        android:background="@drawable/bogocedittext"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ext_sodienthaoi"
        android:layout_marginTop="40px"/>
    <EditText
        android:id="@+id/ext_sodienthaoi"
        android:layout_width="1000px"
        android:layout_height="120px"
        android:hint="Số điện thoại"
        android:textStyle="italic"
        android:padding="15px"
        android:background="@drawable/bogocedittext"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_dkemail"
        android:layout_marginTop="40px"/>

    <Button
        android:id="@+id/btn_dangKi"
        android:layout_width="1000px"
        android:layout_height="120px"
        android:layout_marginTop="70px"
        android:text="Đăng Kí"
        android:textSize="45px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ext_dkmatkhau" />

</androidx.constraintlayout.widget.ConstraintLayout>