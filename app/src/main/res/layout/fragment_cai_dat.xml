<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white"
    tools:context=".ActivityFragment.PetFragment">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/dangxuat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_baseline_dehaze_24"
                   />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:textStyle="bold">

                </TextView>
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16px"
            android:background="#ffffff"
            android:id="@+id/top_bar"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16px"
                android:background="#ffffff"
                android:id="@+id/bottom_bar"
                >
                <TextView
                    android:id="@+id/pr_hovaten"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textSize="23dp"
                    android:textColor="#000"
                    android:text="fafaf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:padding="16px"
                android:background="#ffffff"
          >
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:text="Ngày sinh:"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/ngaysinh"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16px"
                android:background="#ffffff"
               >
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:text="Địa chỉ:"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/diachi"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16px"
                android:background="#ffffff">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:text="Số điện loại:"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/sodienthoai"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16px"
                android:background="#ffffff"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:text="Gmail:"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/gmail"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16px"
                android:background="#ffffff"
               >
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:text="Giới tính:"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/gioitinh"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16px"
                android:background="#ffffff"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:text="Tên trang trại:"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tentrangtrai"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="16px"
                android:layout_height="wrap_content">
              <androidx.recyclerview.widget.RecyclerView
                  android:layout_width="match_parent"
                  android:layout_weight="1"
                  android:layout_height="match_parent"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    </com.google.android.material.appbar.AppBarLayout>
</RelativeLayout>