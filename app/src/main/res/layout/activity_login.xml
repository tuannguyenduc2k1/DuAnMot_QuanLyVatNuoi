<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dangnhap.Login">
    <ImageView
        android:id="@+id/img_Login"
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:background="#3584a5"
        android:src="@drawable/logo"
        android:padding="100px"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/txt_login"
        android:layout_width="500px"
        android:layout_height="100px"
        android:text="ĐĂNG NHẬP"
        android:layout_marginTop="100px"
        android:textSize="24dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_Login"
        android:gravity="center_horizontal" />
    <EditText
        android:id="@+id/edt_tendangnhap"
        android:layout_width="800px"
        android:layout_height="120px"
        android:hint="Tên đăng nhập"
        android:text="admin@gmail.com"
        android:textStyle="italic"
        android:padding="15px"
        android:background="@drawable/bogocedittext"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_login"
        android:layout_marginTop="70px"/>
    <EditText
        android:id="@+id/ext_matkhau"
        android:layout_width="800px"
        android:layout_height="120px"
        android:hint="Mật khẩu"
        android:textStyle="italic"
        android:password="true"
        android:text="111111"
        android:padding="15px"
        android:background="@drawable/bogocedittext"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_tendangnhap"
        android:layout_marginTop="20px"/>

    <TextView
        android:id="@+id/txt_quanmetkhau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="84dp"
        android:text="Quên mật khẩu?"
        android:textSize="48px"
        app:layout_constraintRight_toRightOf="@+id/ext_matkhau"
        app:layout_constraintTop_toBottomOf="@+id/ext_matkhau" />

    <Button
        android:id="@+id/btn_dangnhap"
        android:layout_width="800px"
        android:layout_height="120px"
        android:text="ĐĂNG NHẬP"
        android:layout_marginTop="50px"
        android:textSize="45px"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_quanmetkhau"></Button>
    <TextView
        android:id="@+id/txt_hoac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOẶC"
        android:textSize="60px"
        android:layout_marginTop="100px"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_dangnhap"/>

    <TextView
        android:id="@+id/txt_banchuacotaikhoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bạn chưa có tài khoản ?"
        android:textSize="45px"
        android:layout_marginTop="100px"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_hoac"/>
    <TextView
        android:id="@+id/txt_dangki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng kí"
        android:textSize="50px"
        android:textColor="#3584a5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_banchuacotaikhoa"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25px"
        android:background="#3584a5"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>